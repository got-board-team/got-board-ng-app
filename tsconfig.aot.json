{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": true,
    "mapRoot": "",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "outDir": "lib",
    "skipLibCheck": true,
    "rootDir": "."
  },
  "exclude": [
      "node_modules",
      "src/main.ts",
      "src/all.ts",
      "e2e",
      "**/*.spec.ts",
      "dynamodb_migrations",
      "server/*"
  ],
  "angularCompilerOptions": {
    "genDir": "./dist/aot/ngfactory"
  }
}
